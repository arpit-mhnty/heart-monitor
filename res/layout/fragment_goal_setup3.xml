<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:orientation="vertical" android:background="?attr/Argus_backgroundColor" android:layout_width="match_parent" android:layout_height="match_parent">
    <com.azumio.android.argus.view.FillingView android:id="@+id/main_menu_toolbars" android:background="?attr/toolbarColor" android:visibility="visible" android:layout_width="match_parent" android:layout_height="?attr/actionBarSize" android:minHeight="?attr/actionBarSize" android:elevation="@dimen/action_bar_elevation">
        <RelativeLayout android:layout_width="match_parent" android:layout_height="match_parent">
            <com.azumio.android.argus.view.CenteredCustomFontView android:textSize="@dimen/arrow_text_size" android:textColor="@color/white" android:id="@+id/toolbar_back_arrow" android:layout_width="30dp" android:layout_height="match_parent" android:layout_marginRight="15dp" android:text="←" android:layout_alignParentLeft="true" app:fontPath="@string/font_path_material_design_set"/>
            <com.azumio.android.argus.view.XMLTypefaceTextView android:textSize="18dp" android:textColor="@android:color/white" android:id="@+id/activity_with_fragment_toolbar_textview" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="10dp" android:layout_toRightOf="@+id/toolbar_back_arrow" android:layout_centerHorizontal="true" android:layout_centerVertical="true" app:typeface="@string/font_path_roboto_regular"/>
        </RelativeLayout>
    </com.azumio.android.argus.view.FillingView>
    <ScrollView android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_above="@+id/bottomlayout" android:layout_below="@+id/main_menu_toolbars">
        <LinearLayout android:orientation="vertical" android:layout_width="match_parent" android:layout_height="wrap_content">
            <TextView android:textSize="14sp" android:textColor="@color/setup_grey_color" android:gravity="center" android:id="@+id/textTitle" android:paddingLeft="25dp" android:paddingRight="25dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="20dp" android:layout_marginBottom="20dp" android:text="@string/describe_normal_level" android:maxLines="3" android:lines="3" android:layout_centerInParent="true"/>
            <LinearLayout android:orientation="vertical" android:id="@+id/middlelayout" android:background="?attr/Argus_backgroundColor" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_below="@+id/textview">
                <RadioGroup android:layout_gravity="center_vertical" android:id="@+id/radio_group_normal_level" android:layout_width="match_parent" android:layout_height="wrap_content" android:showDividers="end">
                    <LinearLayout android:orientation="horizontal" android:background="?attr/dividerColor" android:layout_width="match_parent" android:layout_height="0.5dp"/>
                    <RadioButton android:textAppearance="?attr/textAppearanceTitle" android:textSize="12sp" android:textColor="?attr/radiotextColor" android:id="@+id/radio_button_sedentary" android:paddingLeft="15dp" android:paddingTop="5dp" android:paddingBottom="5dp" android:layout_width="match_parent" android:layout_height="@dimen/calorie_cell_height" android:layout_marginRight="15dp" android:checked="true" android:button="@null" android:text="@string/sedentary_level" android:buttonTint="?attr/colorControlActivated" style="@style/RadioButton"/>
                    <LinearLayout android:orientation="horizontal" android:id="@+id/separator" android:background="?attr/dividerColor" android:layout_width="match_parent" android:layout_height="0.5dp"/>
                    <RadioButton android:textAppearance="?attr/textAppearanceTitle" android:textSize="12sp" android:textColor="?attr/radiotextColor" android:id="@+id/radio_button_lightly_active" android:paddingLeft="15dp" android:paddingTop="5dp" android:paddingBottom="5dp" android:layout_width="match_parent" android:layout_height="@dimen/calorie_cell_height" android:layout_marginRight="15dp" android:button="@null" android:text="@string/lightly_active_level" style="@style/RadioButton"/>
                    <LinearLayout android:orientation="horizontal" android:id="@+id/separator1" android:background="?attr/dividerColor" android:layout_width="match_parent" android:layout_height="0.5dp"/>
                    <RadioButton android:textAppearance="?attr/textAppearanceTitle" android:textSize="12sp" android:textColor="?attr/radiotextColor" android:id="@+id/radio_button_active" android:paddingLeft="15dp" android:paddingTop="5dp" android:paddingBottom="5dp" android:layout_width="match_parent" android:layout_height="@dimen/calorie_cell_height" android:layout_marginRight="15dp" android:button="@null" android:text="@string/active_level" style="@style/RadioButton"/>
                    <LinearLayout android:orientation="horizontal" android:id="@+id/separator2" android:background="?attr/dividerColor" android:layout_width="match_parent" android:layout_height="0.5dp"/>
                    <RadioButton android:textAppearance="?attr/textAppearanceTitle" android:textSize="12sp" android:textColor="?attr/radiotextColor" android:id="@+id/radio_button_very_active" android:paddingLeft="15dp" android:paddingTop="5dp" android:paddingBottom="5dp" android:layout_width="match_parent" android:layout_height="@dimen/calorie_cell_height" android:layout_marginRight="15dp" android:button="@null" android:text="@string/very_active_level" style="@style/RadioButton"/>
                    <LinearLayout android:orientation="horizontal" android:id="@+id/separator3" android:background="?attr/dividerColor" android:layout_width="match_parent" android:layout_height="0.5dp"/>
                    <RadioButton android:textAppearance="?attr/textAppearanceTitle" android:textSize="12sp" android:textColor="?attr/radiotextColor" android:id="@+id/radio_button_extreme" android:paddingLeft="15dp" android:paddingTop="5dp" android:paddingBottom="5dp" android:layout_width="match_parent" android:layout_height="@dimen/calorie_cell_height" android:layout_marginRight="15dp" android:checked="true" android:button="@null" android:text="@string/extreme_level" style="@style/RadioButton"/>
                    <LinearLayout android:orientation="horizontal" android:background="?attr/dividerColor" android:layout_width="match_parent" android:layout_height="0.5dp"/>
                </RadioGroup>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
    <LinearLayout android:orientation="vertical" android:id="@+id/bottomlayout" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="20dp" android:layout_marginBottom="20dp" android:layout_alignParentBottom="true">
        <Button android:textColor="@color/white" android:id="@+id/nextbtn" android:background="@drawable/rectangle_corner_border" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="25dp" android:layout_marginRight="25dp" android:layout_marginBottom="10dp" android:text="@string/next" android:layout_above="@+id/pagging_layout" android:layout_centerHorizontal="true" android:textAllCaps="false" android:backgroundTint="@color/calories_color" style="?android:attr/borderlessButtonStyle"/>
        <RelativeLayout android:layout_gravity="center_horizontal" android:orientation="horizontal" android:id="@+id/pagging_layout" android:layout_width="36dp" android:layout_height="wrap_content" android:layout_alignParentBottom="true">
            <com.azumio.android.argus.view.XMLTypefaceTextView android:textSize="12sp" android:textColor="@color/light_grey_color" android:id="@+id/paging" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="3" android:layout_alignParentLeft="true" app:typeface="@string/font_path_roboto_regular"/>
            <com.azumio.android.argus.view.XMLTypefaceTextView android:textSize="12sp" android:textColor="@color/light_grey_color" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="of 4" android:layout_alignParentRight="true" app:typeface="@string/font_path_roboto_regular"/>
        </RelativeLayout>
    </LinearLayout>
</RelativeLayout>
