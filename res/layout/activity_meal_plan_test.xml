<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:orientation="vertical" android:background="@color/background_color" android:layout_width="match_parent" android:layout_height="match_parent">
    <RelativeLayout android:background="@color/background_color" android:layout_width="match_parent" android:layout_height="280dp">
        <RelativeLayout android:orientation="horizontal" android:id="@+id/container_user_background_picture" android:clickable="true" android:layout_width="match_parent" android:layout_height="280dp">
            <ImageView android:id="@+id/imageview" android:layout_width="match_parent" android:layout_height="280dp" android:src="@drawable/cm_meal_plan_test" android:scaleType="centerCrop"/>
            <com.azumio.android.argus.view.XMLTypefaceTextView android:textSize="50sp" android:textColor="@color/white" android:gravity="center" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="@string/meal_test_text" android:maxLines="2" android:lines="2" android:layout_centerInParent="true" android:layout_centerVertical="true" app:typeface="@string/font_path_league_gothic_regular"/>
        </RelativeLayout>
        <View android:background="@drawable/arc_drop_shadow" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_alignBottom="@+id/container_user_background_picture"/>
        <com.azumio.android.argus.view.CenteredCustomFontView android:textSize="30sp" android:textColor="@color/white" android:id="@+id/cross" android:visibility="visible" android:layout_width="40dp" android:layout_height="30dp" android:layout_marginLeft="5dp" android:layout_marginTop="25dp" android:layout_alignParentTop="true"/>
        <androidx.appcompat.widget.Toolbar android:id="@+id/main_menu_toolbar" android:paddingLeft="0dp" android:layout_width="40dp" android:layout_height="30dp" android:layout_marginLeft="5dp" android:layout_marginTop="25dp" android:minHeight="?attr/actionBarSize" android:layout_alignParentLeft="true" android:layout_alignParentTop="true" android:layout_alignParentRight="true"/>
    </RelativeLayout>
    <com.azumio.android.argus.view.XMLTypefaceTextView android:textSize="16sp" android:textColor="@color/calorie_color" android:gravity="center" android:id="@+id/questionTitle" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="25dp" android:layout_marginRight="25dp" android:text="What is your goal?" app:typeface="@string/font_path_roboto_regular"/>
    <com.azumio.android.argus.mealplans.CustomViewPager android:id="@+id/viewpager" android:background="@drawable/rectangle_corner_border" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="15dp" android:layout_marginTop="10dp" android:layout_marginRight="15dp" android:layout_below="@+id/questionTitle"/>
</LinearLayout>
