<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:orientation="vertical" android:background="#f5f4ff" android:layout_width="match_parent" android:layout_height="match_parent">
    <RelativeLayout android:background="@drawable/steps_img" android:layout_width="wrap_content" android:layout_height="178dp"/>
    <ScrollView android:layout_width="match_parent" android:layout_height="wrap_content">
        <LinearLayout android:orientation="vertical" android:layout_width="match_parent" android:layout_height="wrap_content">
            <com.azumio.android.argus.view.XMLTypefaceTextView android:textSize="20sp" android:textColor="@color/text_color" android:gravity="center_vertical" android:layout_gravity="left" android:layout_width="wrap_content" android:layout_height="50dp" android:layout_marginLeft="20dp" android:text="@string/daily_steps_title" app:typeface="@string/font_path_roboto_medium"/>
            <com.azumio.android.argus.view.XMLTypefaceTextView android:textSize="15sp" android:textColor="@color/text_color" android:gravity="left|center_vertical|center_horizontal|center" android:layout_gravity="center_horizontal" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="20dp" android:layout_marginTop="10dp" android:layout_marginRight="20dp" android:text="@string/step_goal_desc" app:typeface="@string/font_path_roboto_light"/>
            <com.azumio.android.argus.view.XMLTypefaceTextView android:textSize="28sp" android:textColor="@color/text_color" android:gravity="center_vertical" android:layout_gravity="center_horizontal" android:id="@+id/stepsValue" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="10dp" app:typeface="@string/font_path_roboto_medium"/>
            <com.azumio.android.argus.view.XMLTypefaceTextView android:textSize="15sp" android:textColor="@color/text_color" android:gravity="center_vertical" android:layout_gravity="center_horizontal" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="steps" app:typeface="@string/font_path_roboto_regular"/>
            <SeekBar android:id="@+id/seekBar" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="20dp" android:layout_marginTop="20dp" android:layout_marginRight="20dp" android:max="10000" android:progress="500" android:progressDrawable="@drawable/seekbar_style" android:thumb="@drawable/thumb_image" android:thumbOffset="0dp" android:min="500"/>
            <com.azumio.android.argus.view.XMLTypefaceTextView android:textSize="15sp" android:textColor="@color/text_color" android:gravity="center" android:layout_gravity="center_horizontal" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_margin="20dp" android:text="@string/move_steps_toggle" app:typeface="@string/font_path_roboto_light"/>
            <include layout="@layout/view_google_fit_fragment_steps_integration"/>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
