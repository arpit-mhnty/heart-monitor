<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:orientation="vertical" android:layout_width="match_parent" android:layout_height="match_parent">
    <LinearLayout android:orientation="vertical" android:id="@+id/header" android:background="@color/background_color" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_alignParentTop="true">
        <RelativeLayout android:background="@color/background_color" android:layout_width="match_parent" android:layout_height="210dp" android:layout_alignParentTop="true">
            <RelativeLayout android:orientation="horizontal" android:id="@+id/container_user_background_picture" android:background="@color/background_color" android:clickable="true" android:layout_width="match_parent" android:layout_height="210dp" android:layout_alignParentTop="true">
                <ImageView android:id="@+id/imageview" android:layout_width="match_parent" android:layout_height="210dp" android:src="@drawable/cm_meal_plan_test" android:scaleType="centerCrop" android:layout_alignParentTop="true"/>
            </RelativeLayout>
            <RelativeLayout android:background="#42000000" android:layout_width="match_parent" android:layout_height="210dp">
                <RelativeLayout android:layout_width="match_parent" android:layout_height="match_parent" android:layout_marginTop="40dp">
                    <com.azumio.android.argus.view.XMLTypefaceTextView android:textSize="61sp" android:textColor="@color/white" android:gravity="center" android:id="@+id/mealName" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="KETO" app:typeface="@string/font_path_league_gothic_regular"/>
                    <com.azumio.android.argus.view.XMLTypefaceTextView android:textSize="18sp" android:textColor="@color/white" android:gravity="center" android:id="@+id/mealTitle" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="5dp" android:text="Low carb and high fat" android:layout_below="@+id/mealName" app:typeface="@string/font_path_sans_francisco_regular"/>
                </RelativeLayout>
                <androidx.appcompat.widget.Toolbar android:id="@+id/main_menu_toolbar" android:paddingLeft="0dp" android:layout_width="40dp" android:layout_height="30dp" android:layout_marginLeft="5dp" android:layout_marginTop="25dp" android:minHeight="?attr/actionBarSize" android:layout_alignParentLeft="true" android:layout_alignParentTop="true" android:layout_alignParentRight="true"/>
            </RelativeLayout>
            <View android:background="@drawable/arc_drop_shadow" android:visibility="visible" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_alignBottom="@+id/container_user_background_picture"/>
        </RelativeLayout>
        <RelativeLayout android:gravity="bottom|center_vertical|center_horizontal|center" android:layout_gravity="center" android:id="@+id/startPlan" android:background="@drawable/extra_rounded_premium_btn" android:visibility="visible" android:layout_width="160dp" android:layout_height="wrap_content" android:layout_marginTop="-40dp" android:layout_alignParentTop="true" android:backgroundTint="@color/white">
            <com.azumio.android.argus.view.XMLTypefaceTextView android:textSize="16sp" android:textColor="#414c5d" android:gravity="center" android:id="@+id/startPlanText" android:layout_width="160dp" android:layout_height="38dp" android:text="START PLAN" android:textAllCaps="true" app:typeface="@string/font_path_sans_francisco_medium"/>
        </RelativeLayout>
    </LinearLayout>
    <com.azumio.android.argus.view.CenteredCustomFontView android:textSize="30sp" android:textColor="@color/white" android:id="@+id/cross" android:visibility="visible" android:layout_width="40dp" android:layout_height="30dp" android:layout_marginLeft="5dp" android:layout_marginTop="15dp" android:layout_alignParentTop="true"/>
</RelativeLayout>
