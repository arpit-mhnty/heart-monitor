<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:orientation="vertical" android:layout_width="match_parent" android:layout_height="match_parent">
    <TextView android:textSize="14dp" android:textColor="@color/user_details_gray" android:gravity="center" android:id="@+id/fragment_goal_setting_title" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="25dp" android:layout_marginTop="25dp" android:layout_marginRight="25dp" android:layout_marginBottom="15dp"/>
    <com.azumio.android.argus.view.customseekbar.DottedSeekBar android:id="@+id/fragment_goal_setting_dottedseekbar" android:paddingTop="50dp" android:paddingBottom="60dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="25dp" android:layout_marginRight="25dp" android:maxHeight="6dp" android:max="5" android:progressDrawable="@drawable/goal_progress_background" android:minHeight="6dp" android:thumb="@drawable/goal_seekbar_dot_transparent"/>
    <LinearLayout android:orientation="vertical" android:id="@+id/fragment_goal_setting_weight" android:layout_width="match_parent" android:layout_height="200dp">
        <TextView android:gravity="center" android:id="@+id/fragment_goal_setting_information_textview" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="Weight Goal"/>
        <TextView android:textColor="@color/blue" android:gravity="center" android:id="@+id/fragment_goal_setting_weigth_value" android:layout_width="match_parent" android:layout_height="match_parent"/>
    </LinearLayout>
    <Button android:layout_gravity="center" android:id="@+id/fragment_goal_setting_remove_goal" android:layout_width="120dp" android:layout_height="wrap_content" android:layout_marginTop="15dp" android:layout_marginBottom="15dp" android:text="Remove Goal"/>
    <TextView android:gravity="center" android:id="@+id/fragment_goal_setting_description_long" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="25dp" android:layout_marginRight="25dp"/>
</LinearLayout>
