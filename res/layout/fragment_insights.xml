<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:orientation="vertical" android:id="@+id/mainView" android:layout_width="match_parent" android:layout_height="match_parent">
    <com.azumio.android.argus.view.FillingView android:id="@+id/main_menu_toolbars" android:background="@color/workout" android:visibility="gone" android:layout_width="match_parent" android:layout_height="?attr/actionBarSize" android:minHeight="?attr/actionBarSize" android:elevation="@dimen/action_bar_elevation">
        <RelativeLayout android:layout_width="match_parent" android:layout_height="match_parent">
            <com.azumio.android.argus.view.CenteredCustomFontView android:textSize="@dimen/arrow_text_size" android:textColor="@color/white" android:id="@+id/toolbar_back_arrow" android:layout_width="30dp" android:layout_height="match_parent" android:layout_marginRight="15dp" android:text="←" android:layout_alignParentLeft="true" app:fontPath="@string/font_path_material_design_set"/>
            <com.azumio.android.argus.view.XMLTypefaceTextView android:textSize="18dp" android:textColor="@color/white" android:id="@+id/activity_with_fragment_toolbar_textview" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="10dp" android:text="Workout History" android:layout_toRightOf="@+id/toolbar_back_arrow" android:layout_centerHorizontal="true" android:layout_centerVertical="true" app:textAllCaps="false" app:typeface="@string/font_path_roboto_regular"/>
        </RelativeLayout>
    </com.azumio.android.argus.view.FillingView>
    <FrameLayout android:layout_width="match_parent" android:layout_height="0dp" android:layout_weight="1">
        <FrameLayout android:id="@+id/container_list_view_no_results" android:layout_width="match_parent" android:layout_height="match_parent"/>
        <androidx.swiperefreshlayout.widget.SwipeRefreshLayout android:id="@+id/swipe_container" android:padding="0dp" android:layout_width="match_parent" android:layout_height="match_parent">
            <ListView android:id="@+id/list_view_insights" android:layout_width="match_parent" android:layout_height="match_parent" android:fillViewport="true"/>
        </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>
        <androidx.constraintlayout.widget.ConstraintLayout android:layout_gravity="bottom" android:id="@+id/reloadLogs" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content" android:elevation="2dp">
            <View android:id="@+id/shadow" android:background="@drawable/shadow_top" android:layout_width="match_parent" android:layout_height="4dp" android:layout_marginTop="0dp" app:layout_constraintTop_toTopOf="0"/>
            <FrameLayout android:background="@color/white" android:layout_width="match_parent" android:layout_height="0dp" app:layout_constraintBottom_toBottomOf="0" app:layout_constraintTop_toBottomOf="@+id/shadow"/>
            <ImageView android:id="@+id/cancel" android:background="?attr/selectableItemBackground" android:padding="8dp" android:layout_width="48dp" android:layout_height="48dp" android:src="@drawable/ic_cancel_white_24dp" android:tint="@color/fb_cancel" app:layout_constraintEnd_toEndOf="0" app:layout_constraintTop_toTopOf="0"/>
            <com.azumio.android.argus.view.XMLTypefaceTextView android:textSize="14sp" android:gravity="start" android:id="@+id/legacyMigrationSuccessText" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="16dp" android:text="@string/missing_logs" android:layout_marginStart="30dp" android:layout_marginEnd="50dp" app:layout_constraintEnd_toEndOf="0" app:layout_constraintStart_toStartOf="0" app:layout_constraintTop_toTopOf="0"/>
            <ImageView android:id="@+id/workoutHistoryIcon" android:layout_width="32dp" android:layout_height="32dp" android:layout_marginTop="16dp" android:src="@drawable/icon_reload" android:layout_marginStart="30dp" app:layout_constraintStart_toStartOf="0" app:layout_constraintTop_toBottomOf="@+id/legacyMigrationSuccessText"/>
            <com.azumio.android.argus.view.XMLTypefaceTextView android:textSize="18dp" android:textColor="@color/black" android:id="@+id/workoutHistoryText" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="19dp" android:layout_marginBottom="16dp" android:text="@string/reload_data" android:layout_marginStart="30dp" app:layout_constraintBottom_toBottomOf="0" app:layout_constraintStart_toEndOf="@+id/workoutHistoryIcon" app:layout_constraintTop_toBottomOf="@+id/legacyMigrationSuccessText"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </FrameLayout>
    <include android:visibility="gone" layout="@layout/fragment_insights_footer"/>
    <Button android:textColor="@color/white_translucent" android:id="@+id/generate_report" android:background="#006798" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="@string/generate_monthly_report" android:layout_alignParentBottom="true"/>
</LinearLayout>
