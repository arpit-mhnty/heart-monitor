<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:orientation="vertical" android:layout_width="match_parent" android:layout_height="match_parent">
    <RelativeLayout android:id="@+id/headerView" android:layout_width="match_parent" android:layout_height="260dp" android:layout_alignParentTop="true">
        <ImageView android:layout_width="match_parent" android:layout_height="wrap_content" android:src="@drawable/coffeeinbed" android:scaleType="centerCrop" android:layout_alignParentTop="true"/>
        <TextView android:textSize="15sp" android:textColor="@color/white" android:id="@+id/double_text" android:layout_marginTop="140dp" android:layout_marginBottom="10dp" android:text="@string/double_chance" android:layout_centerHorizontal="true" style="@style/text_design_premium"/>
        <TextView android:textSize="22sp" android:textColor="@color/white" android:gravity="center_horizontal" android:id="@+id/today_text" android:text="@string/today_only" android:maxLines="3" android:lines="3" android:layout_below="@+id/double_text" android:layout_centerHorizontal="true" android:lineSpacingExtra="3dp" style="@style/today_text_design"/>
    </RelativeLayout>
</LinearLayout>
