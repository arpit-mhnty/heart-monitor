<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:orientation="vertical" android:background="@drawable/ihr_bg" android:layout_width="match_parent" android:layout_height="match_parent">
    <RelativeLayout android:gravity="center_vertical" android:orientation="vertical" android:id="@+id/graphView" android:layout_width="match_parent" android:layout_height="wrap_content">
        <RelativeLayout android:id="@+id/graph_view_upgrade" android:visibility="visible" android:clickable="true" android:layout_width="match_parent" android:layout_height="200dp" android:layout_marginTop="30dp" android:layout_marginBottom="30dp">
            <ImageView android:id="@+id/graph_view_upgrade_image" android:layout_width="match_parent" android:layout_height="match_parent" android:src="@drawable/ppg_no_text" android:scaleType="fitXY" android:layout_centerInParent="true"/>
            <TextView android:textSize="18dp" android:textColor="#ffffff" android:gravity="center" android:id="@+id/dateText" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="10dp" android:text="Thursday, Oct 15 2020" android:layout_alignParentTop="true"/>
        </RelativeLayout>
    </RelativeLayout>
    <RelativeLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_below="@+id/graphView">
        <com.azumio.android.argus.view.CenteredCustomFontView android:textSize="50dp" android:textColor="@android:color/white" android:id="@+id/fragment_heart_rate_icon" android:layout_width="@dimen/inner_margin_checkins" android:layout_height="43dp" android:layout_marginBottom="25dp" android:layout_alignBottom="@+id/heart_rate_fragment_textview" android:layout_alignParentLeft="true" android:layout_alignParentStart="true" app:fontPath="@string/font_path_argus_set"/>
        <com.azumio.android.argus.view.XMLTypefaceTextView android:textSize="80dp" android:textColor="@android:color/white" android:gravity="bottom" android:id="@+id/heart_rate_fragment_textview" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="0dp" android:layout_toRightOf="@+id/fragment_heart_rate_icon" android:layout_toEndOf="@+id/fragment_heart_rate_icon" app:typeface="@string/font_path_league_gothic_regular"/>
        <TextView android:textColor="@android:color/white" android:id="@+id/timestampTextView" android:layout_width="match_parent" android:layout_height="18dp" android:layout_marginTop="0dp" android:layout_marginBottom="15dp" android:layout_toRightOf="@+id/fragment_heart_rate_icon" android:layout_below="@+id/heart_rate_fragment_textview"/>
        <com.azumio.android.argus.view.RainbowView android:id="@+id/rainbow_view" android:layout_width="272dp" android:layout_height="30dp" android:layout_below="@+id/timestampTextView" android:layout_alignLeft="@+id/timestampTextView" android:layout_alignStart="@+id/timestampTextView"/>
        <ImageView android:id="@+id/showEmptyZone" android:visibility="gone" android:layout_width="272dp" android:layout_height="30dp" android:src="@drawable/zones" android:layout_below="@+id/timestampTextView" android:layout_alignLeft="@+id/timestampTextView" android:layout_alignStart="@+id/timestampTextView"/>
    </RelativeLayout>
    <androidx.constraintlayout.widget.ConstraintLayout android:orientation="vertical" android:id="@+id/startMeasurementView" android:background="@drawable/rounded_blue" android:layout_width="300dp" android:layout_height="wrap_content" android:layout_marginBottom="30dp" android:layout_alignParentBottom="true" android:layout_centerHorizontal="true" android:backgroundTint="@color/buttonColor">
        <com.azumio.android.argus.view.XMLTypefaceTextView android:textSize="16.32sp" android:textColor="@color/white" android:gravity="center" android:id="@+id/startMeasuringBtn" android:layout_width="match_parent" android:layout_height="42dp" android:text="Next" android:layout_centerHorizontal="true" android:textAllCaps="true" app:typeface="@string/font_path_roboto_regular"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</RelativeLayout>
