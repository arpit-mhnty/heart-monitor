            <ImageView android:id="@+id/imgGirl1" android:layout_width="94dp" android:layout_height="match_parent" android:src="@drawable/program_player_play" android:layout_weight="1"/>
            <ImageView android:id="@+id/imgBoy" android:layout_width="94dp" android:layout_height="match_parent" android:src="@drawable/program_player_play" android:layout_weight="1"/>
            <ImageView android:id="@+id/imgGirl2" android:layout_width="94dp" android:layout_height="match_parent" android:src="@drawable/program_player_play" android:layout_weight="1"/>
        </LinearLayout>
