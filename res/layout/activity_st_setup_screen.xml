<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:orientation="vertical" android:background="#141050" android:layout_width="match_parent" android:layout_height="match_parent">
    <RelativeLayout android:layout_width="match_parent" android:layout_height="match_parent">
        <ImageView android:textSize="24sp" android:id="@+id/sleepChartImg" android:paddingTop="55dp" android:layout_width="125dp" android:layout_height="wrap_content" android:src="@drawable/sleepchart" android:layout_alignParentTop="true" android:layout_centerHorizontal="true"/>
        <LinearLayout android:orientation="vertical" android:layout_width="match_parent" android:layout_height="match_parent" android:layout_marginLeft="20dp" android:layout_marginTop="50dp" android:layout_marginRight="20dp" android:layout_below="@+id/sleepChartImg">
            <LinearLayout android:gravity="center" android:orientation="vertical" android:id="@+id/center_view" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_below="@+id/welcometxt">
                <com.azumio.android.argus.view.XMLTypefaceTextView android:textSize="26sp" android:textStyle="normal" android:textColor="@android:color/white" android:gravity="center" android:layout_gravity="center_horizontal" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="Sleep Time wants to\10fix your mornings" android:lines="2" android:minLines="2" app:typeface="@string/font_path_roboto_medium"/>
                <com.azumio.android.argus.view.XMLTypefaceTextView android:textSize="17sp" android:textColor="@android:color/white" android:gravity="center" android:layout_gravity="center_horizontal" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="30dp" android:text="In order to respect your natual sleep rhythm, we find the perfect time to wake you up by analyzing your sleep." android:lines="3" android:minLines="3" app:typeface="@string/font_path_roboto_light"/>
            </LinearLayout>
        </LinearLayout>
        <RelativeLayout android:layout_gravity="center_horizontal" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="20dp" android:layout_marginTop="20dp" android:layout_marginRight="20dp" android:layout_marginBottom="30dp" android:layout_alignParentBottom="true">
            <Button android:textSize="16sp" android:textColor="@color/white" android:gravity="center" android:id="@+id/nextbtn" android:background="@drawable/rounded_blue" android:layout_width="match_parent" android:layout_height="45dp" android:text="@string/next" android:layout_below="@+id/smallest_text" android:textAllCaps="false"/>
        </RelativeLayout>
    </RelativeLayout>
</LinearLayout>
