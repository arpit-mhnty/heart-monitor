<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:layout_width="match_parent" android:layout_height="match_parent">
    <LinearLayout android:gravity="center" android:orientation="horizontal" android:id="@+id/mainView" android:layout_width="match_parent" android:layout_height="95dp" android:layout_marginLeft="13dp" android:layout_marginTop="10dp" android:layout_marginRight="13dp" android:layout_alignParentTop="true" android:layout_centerHorizontal="true">
        <ImageView android:id="@+id/breakfast" android:layout_width="0dp" android:layout_height="wrap_content" android:scaleType="centerCrop" android:layout_weight="1"/>
        <ImageView android:id="@+id/lunch" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_marginLeft="10dp" android:scaleType="centerCrop" android:layout_weight="1"/>
        <ImageView android:id="@+id/dinner" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_marginLeft="10dp" android:scaleType="centerCrop" android:layout_weight="1"/>
    </LinearLayout>
    <LinearLayout android:orientation="vertical" android:id="@+id/mealDetailView" android:background="@color/white" android:paddingLeft="5dp" android:paddingTop="5dp" android:visibility="gone" android:layout_width="match_parent" android:layout_height="55dp" android:layout_marginLeft="13dp" android:layout_marginRight="13dp" android:layout_below="@+id/mainView">
        <com.azumio.android.argus.view.XMLTypefaceTextView android:textSize="10sp" android:id="@+id/mealType" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="BREAKFAST"/>
        <com.azumio.android.argus.view.XMLTypefaceTextView android:textSize="14sp" android:id="@+id/mealRecipe" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Bacon and eggs"/>
    </LinearLayout>
</RelativeLayout>
