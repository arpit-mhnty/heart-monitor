<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:orientation="vertical" android:background="@drawable/ihr_bg" android:layout_width="match_parent" android:layout_height="match_parent">
    <com.azumio.android.argus.view.CenteredCustomFontView android:textSize="30sp" android:textColor="@color/white" android:id="@+id/cross" android:visibility="visible" android:layout_width="40dp" android:layout_height="30dp" android:layout_marginLeft="5dp" android:layout_marginTop="25dp" android:layout_alignParentTop="true"/>
    <LinearLayout android:gravity="center_vertical" android:layout_gravity="center_vertical" android:orientation="vertical" android:layout_width="match_parent" android:layout_height="match_parent">
        <com.azumio.android.argus.view.XMLTypefaceTextView android:gravity="center" android:id="@+id/improve_text" android:text="@string/improve_health" android:lines="2" android:layout_above="@+id/take_next" android:layout_centerInParent="true" android:lineSpacingExtra="@dimen/line_spacing" app:typeface="@string/font_path_roboto_regular" style="@style/improve_text_design"/>
        <com.azumio.android.argus.view.XMLTypefaceTextView android:textColor="#ccffffff" android:gravity="center" android:id="@+id/take_next" android:text="@string/take_next_step" android:lines="3" android:layout_above="@+id/smallest_text" android:layout_centerInParent="true" android:lineSpacingExtra="@dimen/line_spacing" app:typeface="@string/font_path_roboto_regular" style="@style/text_design"/>
        <com.azumio.android.argus.view.XMLTypefaceTextView android:textColor="#ccffffff" android:gravity="center" android:id="@+id/smallest_text" android:text="@string/smallest_change_text" android:lines="2" android:layout_centerInParent="true" android:layout_centerHorizontal="true" android:layout_centerVertical="true" android:lineSpacingExtra="@dimen/line_spacing" app:typeface="@string/font_path_roboto_regular" style="@style/text_design"/>
        <LinearLayout android:id="@+id/bottomlayout" android:background="@drawable/rounded_blue" android:layout_width="match_parent" android:layout_height="90dp" android:layout_marginLeft="30dp" android:layout_marginRight="30dp" android:layout_below="@+id/smallest_text">
            <TextView android:textSize="@dimen/text_size" android:textColor="@color/white" android:gravity="center" android:id="@+id/choose_program" android:layout_width="match_parent" android:layout_height="match_parent" android:text="@string/button_choose_text"/>
        </LinearLayout>
        <com.azumio.android.argus.view.XMLTypefaceTextView android:textSize="14sp" android:gravity="center" android:id="@+id/complete_later" android:visibility="invisible" android:layout_marginTop="20dp" android:text="COMPLETE LATER" android:layout_centerHorizontal="true" style="@style/text_design"/>
    </LinearLayout>
</LinearLayout>
