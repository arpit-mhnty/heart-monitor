<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:orientation="vertical" android:background="@color/grey_color" android:layout_width="match_parent" android:layout_height="match_parent">
    <androidx.appcompat.widget.Toolbar android:id="@+id/toolbar_main" android:background="@color/transparent" android:layout_width="match_parent" android:layout_height="?attr/actionBarSize" android:minHeight="?attr/actionBarSize">
        <RelativeLayout android:layout_width="match_parent" android:layout_height="match_parent">
            <com.azumio.android.argus.view.CenteredCustomFontView android:textSize="@dimen/arrow_text_size" android:textColor="@color/workout_icon_color" android:id="@+id/toolbar_back_arrow" android:layout_width="30dp" android:layout_height="match_parent" android:layout_marginRight="15dp" android:text="←" android:layout_alignParentLeft="true" app:fontPath="@string/font_path_material_design_set"/>
            <com.azumio.android.argus.view.XMLTypefaceTextView android:textSize="@dimen/toolbar_text_size" android:textColor="@color/settings_activity_toolbar_text_color" android:ellipsize="end" android:gravity="left|center_vertical|center_horizontal|center|start" android:id="@+id/toolbar_text_view_title" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="match_parent" android:text="" android:singleLine="true" android:layout_toLeftOf="@+id/toolbar_done" android:layout_toRightOf="@+id/toolbar_back_arrow"/>
            <com.azumio.android.argus.view.CenteredCustomFontView android:textSize="30dp" android:textColor="@color/workout_icon_color" android:id="@+id/cell_medicine_menu" android:background="?attr/selectableItemBackgroundBorderless" android:layout_width="40dp" android:layout_height="30dp" android:layout_marginLeft="16dp" android:layout_marginTop="16dp" android:layout_alignParentRight="true" android:layout_centerVertical="true" android:layout_marginStart="16dp" app:argusIconMapKey="more-vert"/>
        </RelativeLayout>
    </androidx.appcompat.widget.Toolbar>
    <ScrollView android:id="@+id/scrollView" android:layout_width="match_parent" android:layout_height="match_parent" android:layout_below="@+id/toolbar_main">
        <RelativeLayout android:id="@+id/mainView" android:layout_width="match_parent" android:layout_height="match_parent">
            <LinearLayout android:orientation="vertical" android:id="@+id/viewPagerContainer" android:layout_width="match_parent" android:layout_height="wrap_content">
                <androidx.viewpager.widget.ViewPager android:id="@+id/viewpager" android:paddingLeft="0dp" android:paddingTop="0dp" android:paddingRight="0dp" android:paddingBottom="10dp" android:layout_width="match_parent" android:layout_height="350dp" android:layout_marginLeft="10dp" android:layout_marginTop="15dp" android:layout_marginRight="10dp" android:layout_marginBottom="10dp"/>
                <RelativeLayout android:id="@+id/videoLayout" android:visibility="gone" android:layout_width="match_parent" android:layout_height="300dp" android:layout_alignParentTop="true">
                    <com.google.android.exoplayer2.p021ui.PlayerView android:id="@+id/videoView" android:layout_width="match_parent" android:layout_height="match_parent" android:layout_alignParentLeft="true" android:layout_alignParentTop="true" android:layout_alignParentRight="true" android:layout_alignParentBottom="true" app:resize_mode="4" app:use_controller="false"/>
                    <ProgressBar android:id="@+id/videoProgress" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_centerInParent="true"/>
                    <com.azumio.android.argus.view.CenteredCustomFontView android:textSize="@dimen/arrow_text_size" android:textColor="@color/white" android:id="@+id/video_back_arrow" android:layout_width="30dp" android:layout_height="?attr/actionBarSize" android:layout_marginLeft="15dp" android:text="←" android:layout_alignParentLeft="true" android:layout_alignParentTop="true" app:fontPath="@string/font_path_material_design_set"/>
                </RelativeLayout>
            </LinearLayout>
            <LinearLayout android:gravity="center_horizontal" android:id="@+id/layoutdots" android:layout_width="match_parent" android:layout_height="20dp" android:layout_marginBottom="20dp" android:layout_alignBottom="@+id/viewPagerContainer" android:layout_centerInParent="true">
                <LinearLayout android:layout_gravity="top|center_vertical|center_horizontal|center" android:orientation="horizontal" android:id="@+id/pagging" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
            </LinearLayout>
            <com.azumio.android.argus.view.XMLTypefaceTextView android:textSize="26sp" android:textStyle="bold" android:textColor="@color/calorie_color" android:id="@+id/exercise_name" android:visibility="visible" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="20dp" android:layout_marginTop="20dp" android:text="Backpack Dip" android:layout_below="@+id/viewPagerContainer"/>
            <com.azumio.android.argus.view.XMLTypefaceTextView android:textSize="16sp" android:textStyle="bold" android:textColor="@color/calorie_color" android:id="@+id/exercise_inner_details" android:visibility="visible" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="20dp" android:layout_marginTop="0dp" android:text="Chair, Bent Knees, Leg Up, Left" android:layout_below="@+id/exercise_name" app:typeface="@string/font_path_roboto_medium"/>
            <com.azumio.android.argus.view.XMLTypefaceTextView android:textSize="20sp" android:textStyle="bold" android:textColor="@color/calorie_color" android:id="@+id/exerciseByMuscle" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="20dp" android:layout_marginTop="10dp" android:text="Muscles" android:layout_below="@+id/exercise_inner_details" app:typeface="@string/font_path_roboto_medium"/>
            <com.google.android.material.chip.ChipGroup android:id="@+id/chipGroup" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="20dp" android:layout_below="@+id/exerciseByMuscle" android:layout_marginStart="16dp" android:layout_marginEnd="16dp" app:singleLine="false"/>
            <com.azumio.android.argus.view.XMLTypefaceTextView android:textSize="20sp" android:textStyle="bold" android:textColor="@color/calorie_color" android:id="@+id/equipment" android:visibility="visible" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="20dp" android:layout_marginTop="20dp" android:text="Equipment" android:layout_below="@+id/chipGroup" app:typeface="@string/font_path_roboto_medium"/>
            <com.azumio.android.argus.view.XMLTypefaceTextView android:textSize="15sp" android:textColor="@color/grey_colortxt" android:id="@+id/equipmentsName" android:visibility="visible" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="20dp" android:text="Backpack, Chair" android:layout_below="@+id/equipment" app:typeface="@string/font_path_roboto_regular"/>
            <androidx.recyclerview.widget.RecyclerView android:id="@+id/exercise_desc" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="20dp" android:layout_marginBottom="70dp" android:layout_below="@+id/equipmentsName"/>
        </RelativeLayout>
    </ScrollView>
    <RelativeLayout android:id="@+id/logButtonContainer" android:background="#d6e6fa" android:layout_width="match_parent" android:layout_height="60dp" android:layout_alignParentBottom="true">
        <RelativeLayout android:id="@+id/exerciseDetailsLogButton" android:background="@drawable/extra_rounded_blue_premium_btn" android:layout_width="match_parent" android:layout_height="45dp" android:layout_marginLeft="25dp" android:layout_marginRight="25dp" android:layout_centerInParent="true">
            <TextView android:textSize="20sp" android:textColor="@color/white" android:gravity="center" android:layout_width="match_parent" android:layout_height="match_parent" android:text="Log Exercise"/>
        </RelativeLayout>
        <RelativeLayout android:id="@+id/exerciseDetailsAddButton" android:background="@drawable/extra_rounded_blue_premium_btn" android:visibility="gone" android:layout_width="match_parent" android:layout_height="45dp" android:layout_marginLeft="25dp" android:layout_marginRight="25dp" android:layout_centerInParent="true">
            <TextView android:textSize="20sp" android:textColor="@color/white" android:gravity="center" android:layout_width="match_parent" android:layout_height="match_parent" android:text="Add Exercise"/>
        </RelativeLayout>
    </RelativeLayout>
    <ProgressBar android:id="@+id/loader" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_centerInParent="true"/>
</RelativeLayout>
