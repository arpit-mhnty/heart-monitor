<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:orientation="vertical" android:layout_width="match_parent" android:layout_height="match_parent">
    <RelativeLayout android:paddingTop="10dp" android:layout_width="match_parent" android:layout_height="wrap_content">
        <EditText android:textSize="16sp" android:textStyle="normal" android:textColor="@color/foodlens_calories_color" android:id="@+id/cell_numberserving_count" android:paddingLeft="10dp" android:layout_width="140dp" android:layout_height="50dp" android:text="1" android:singleLine="true" android:maxLength="6" android:layout_alignParentLeft="true" android:inputType="numberDecimal"/>
        <TextView android:textSize="18sp" android:gravity="center" android:layout_width="wrap_content" android:layout_height="50dp" android:text="Serving(s) of" android:layout_toRightOf="@+id/cell_numberserving_count"/>
    </RelativeLayout>
    <Spinner android:id="@+id/cell_serving_count" android:paddingTop="10dp" android:layout_width="260dp" android:layout_height="wrap_content" android:layout_alignParentRight="true" android:layout_centerInParent="true"/>
    <LinearLayout android:layout_gravity="center" android:orientation="horizontal" android:background="@color/foodlens_white" android:layout_width="match_parent" android:layout_height="52dp" android:weightSum="1">
        <Button android:gravity="center" android:id="@+id/buttonCancel" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_marginRight="0.5dp" android:text="Cancel" android:layout_weight="0.5"/>
        <Button android:gravity="center" android:id="@+id/buttonSet" android:layout_width="0dp" android:layout_height="wrap_content" android:text="Save" android:layout_weight="0.5"/>
    </LinearLayout>
</LinearLayout>
