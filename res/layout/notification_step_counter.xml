<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:id="@+id/root" android:layout_width="match_parent" android:layout_height="64dp">
    <ImageView android:id="@+id/image_view_logo" android:layout_width="48dp" android:layout_height="48dp" android:layout_marginLeft="8dp" android:src="@mipmap/ic_launcher" android:layout_alignParentLeft="true" android:layout_centerVertical="true"/>
    <ImageView android:id="@+id/notification_settings_icon" android:padding="12dp" android:layout_width="48dp" android:layout_height="48dp" android:layout_alignParentRight="true" android:layout_centerVertical="true" style="@style/StepCounterNotificationAppearance"/>
    <RelativeLayout android:layout_width="wrap_content" android:layout_height="48dp" android:layout_toRightOf="@+id/image_view_logo" android:layout_centerVertical="true">
        <TextView android:textSize="12sp" android:id="@+id/text_view_title" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="10dp" android:layout_marginRight="10dp" android:text="@string/notification_step_counter_title" style="@style/TextAppearance.NotificationTitle"/>
        <TextView android:textSize="12sp" android:id="@+id/text_view_method" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="10dp" android:layout_marginTop="2dp" android:layout_marginRight="10dp" android:layout_toRightOf="@+id/text_view_title" style="@style/TextAppearance.NotificationTitle"/>
        <ImageView android:id="@+id/image_view_goal_completion" android:layout_width="@dimen/notification_step_counter_goal_view_size" android:layout_height="@dimen/notification_step_counter_goal_view_size" android:layout_marginLeft="10dp" android:layout_marginTop="6dp" android:layout_marginRight="6dp" android:layout_marginBottom="6dp" android:layout_below="@+id/text_view_title" android:layout_alignParentBottom="true"/>
        <TextView android:textSize="22sp" android:id="@+id/text_view_steps_count" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginRight="10dp" android:layout_marginBottom="2dp" android:layout_toRightOf="@+id/image_view_goal_completion" android:layout_below="@+id/text_view_title" android:layout_alignParentBottom="true" style="@style/TextAppearance.NotificationTitle"/>
        <TextView android:textSize="20sp" android:id="@+id/text_view_steps_paused" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="10dp" android:layout_marginRight="10dp" android:layout_marginBottom="2dp" android:text="@string/notification_step_counter_paused" android:layout_toRightOf="@+id/image_view_goal_completion" android:layout_below="@+id/text_view_title" android:layout_alignParentBottom="true" style="@style/TextAppearance.NotificationTitle"/>
    </RelativeLayout>
</RelativeLayout>
