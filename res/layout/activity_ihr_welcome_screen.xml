            <com.azumio.android.argus.view.XMLTypefaceTextView android:textSize="15sp" android:textColor="@android:color/white" android:gravity="center" android:layout_gravity="center" android:id="@+id/sleeptimetxt" android:paddingTop="5dp" android:layout_width="match_parent" android:layout_height="0dp" android:layout_marginTop="40dp" android:text="@string/activity_ihr_info_measurement_detail_txt" android:layout_weight="0.5" app:typeface="@string/font_path_roboto_light"/>
            <ImageView android:id="@+id/intro_image" android:layout_width="wrap_content" android:layout_height="0dp" android:src="@drawable/place_finger_on_camera" android:scaleType="centerInside" android:layout_weight="2"/>
            <com.azumio.android.argus.view.XMLTypefaceTextView android:textSize="15sp" android:textColor="@android:color/white" android:gravity="top|center_vertical|center_horizontal|center" android:layout_gravity="center" android:id="@+id/sleeptimegraphtxt" android:paddingTop="10dp" android:layout_width="match_parent" android:layout_height="0dp" android:text="@string/activity_ihr_info_measurement_detail2_txt" android:layout_weight="1" android:layout_below="@+id/intro_image" app:typeface="@string/font_path_roboto_light"/>
        </LinearLayout>
        <RelativeLayout android:layout_gravity="center_horizontal" android:id="@+id/startMeasurementView" android:background="@drawable/rounded_blue" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="20dp" android:layout_marginBottom="26dp" android:layout_below="@+id/smallest_text" android:layout_alignParentBottom="true">
            <com.azumio.android.argus.view.XMLTypefaceTextView android:textSize="18sp" android:textColor="@color/white" android:gravity="center" android:id="@+id/start_measurement" android:layout_width="match_parent" android:layout_height="45dp" android:text="@string/activity_ihr_info_getstarted_txt" android:textAllCaps="false"/>
        </RelativeLayout>
    </RelativeLayout>
</LinearLayout>
