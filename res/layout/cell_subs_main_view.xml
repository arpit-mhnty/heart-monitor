<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:orientation="vertical" android:background="#fff" android:layout_width="match_parent" android:layout_height="match_parent">
    <FrameLayout android:orientation="horizontal" android:id="@+id/menulist" android:layout_width="match_parent" android:layout_height="175dp" android:layout_centerInParent="true">
        <FrameLayout android:layout_gravity="center" android:layout_width="match_parent" android:layout_height="175dp">
            <ImageView android:id="@+id/mainImg" android:padding="10dp" android:layout_width="match_parent" android:layout_height="match_parent" android:src="@drawable/wp_pause" android:scaleType="fitXY"/>
            <ImageView android:layout_width="match_parent" android:layout_height="match_parent" android:src="@drawable/frame"/>
        </FrameLayout>
        <RelativeLayout android:layout_gravity="right" android:layout_width="match_parent" android:layout_height="match_parent">
            <ImageView android:id="@+id/lockImg" android:paddingTop="14dp" android:paddingRight="10dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginRight="5dp" android:src="@drawable/playpen_unlocked" android:layout_alignParentTop="true" android:layout_alignParentRight="true"/>
            <RelativeLayout android:gravity="bottom|center_vertical|center_horizontal|center" android:id="@+id/btmLayout" android:layout_width="match_parent" android:layout_height="match_parent" android:layout_marginTop="10dp" android:layout_alignParentBottom="true">
                <TextView android:textColor="#fff" android:id="@+id/workoutMet" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginBottom="20dp"/>
                <TextView android:textColor="#fff" android:id="@+id/workoutCalories" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="10dp" android:text="testing " android:layout_toRightOf="@+id/workoutMet"/>
            </RelativeLayout>
        </RelativeLayout>
    </FrameLayout>
</RelativeLayout>
