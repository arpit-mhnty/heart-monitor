<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:layout_width="match_parent" android:layout_height="match_parent">
    <ScrollView android:orientation="vertical" android:layout_width="match_parent" android:layout_height="wrap_content">
        <androidx.constraintlayout.widget.ConstraintLayout android:layout_width="match_parent" android:layout_height="wrap_content">
            <FrameLayout android:id="@+id/extraContainer" android:layout_width="match_parent" android:layout_height="wrap_content" android:elevation="2dp" app:layout_constraintTop_toTopOf="0"/>
            <androidx.constraintlayout.widget.ConstraintLayout android:id="@+id/whiteBg" android:background="@color/white" android:paddingBottom="16dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="16dp" android:layout_marginBottom="60dp" android:elevation="2dp" app:layout_constraintTop_toBottomOf="@+id/extraContainer">
                <LinearLayout android:orientation="vertical" android:id="@+id/inputsContainer" android:layout_width="match_parent" android:layout_height="wrap_content" android:elevation="2dp" app:layout_constraintTop_toTopOf="0"/>
                <FrameLayout android:id="@+id/inputFragmentContainer" android:layout_width="match_parent" android:layout_height="wrap_content" android:elevation="2dp" app:layout_constraintTop_toBottomOf="@+id/inputsContainer"/>
                <fragment android:name="com.azumio.android.argus.addmulticheckin.fragment.TimeAndTagsFragment" android:id="@+id/timeAndTagsFragment" android:layout_width="match_parent" android:layout_height="wrap_content" app:layout_constraintTop_toBottomOf="@+id/inputsContainer"/>
                <View android:id="@+id/separator" android:background="@color/graybg" android:layout_width="0dp" android:layout_height="1dp" app:layout_constraintEnd_toEndOf="0" app:layout_constraintStart_toStartOf="0" app:layout_constraintTop_toBottomOf="@+id/timeAndTagsFragment"/>
                <com.azumio.android.argus.view.CenteredCustomFontView android:textSize="40dp" android:textColor="@color/grey_dark_shade" android:id="@+id/camera_icon" android:layout_width="40dp" android:layout_height="40dp" android:elevation="2dp" app:layout_constraintBottom_toBottomOf="@+id/photoPicker" app:layout_constraintEnd_toEndOf="@+id/photoPicker" app:layout_constraintStart_toStartOf="@+id/photoPicker" app:layout_constraintTop_toTopOf="@+id/photoPicker"/>
                <ImageView android:id="@+id/photoPicker" android:background="@drawable/photo_picker_bg" android:padding="40dp" android:layout_width="110dp" android:layout_height="110dp" android:layout_marginTop="30dp" android:scaleType="centerInside" android:adjustViewBounds="true" android:tint="@color/mid_gray" android:layout_marginStart="16dp" app:layout_constraintStart_toStartOf="0" app:layout_constraintTop_toBottomOf="@+id/timeAndTagsFragment"/>
                <ImageView android:id="@+id/selectedPhoto" android:padding="10dp" android:visibility="gone" android:layout_width="120dp" android:layout_height="120dp" android:layout_marginTop="30dp" android:elevation="2dp" app:layout_constraintStart_toStartOf="0" app:layout_constraintTop_toBottomOf="@+id/timeAndTagsFragment"/>
                <View android:id="@+id/removePhotoHelper" android:background="@color/white" android:padding="8dp" android:visibility="gone" android:layout_width="16dp" android:layout_height="20dp" android:layout_marginTop="12dp" android:layout_marginEnd="16dp" android:elevation="2dp" app:layout_constraintEnd_toEndOf="@+id/selectedPhoto" app:layout_constraintTop_toTopOf="@+id/selectedPhoto"/>
                <ImageView android:id="@+id/removePhoto" android:padding="8dp" android:visibility="gone" android:layout_width="48dp" android:layout_height="48dp" android:src="@drawable/cross" android:tint="@color/gb_blue_color" android:elevation="2dp" app:layout_constraintEnd_toEndOf="@+id/selectedPhoto" app:layout_constraintTop_toTopOf="@+id/selectedPhoto"/>
                <EditText android:gravity="top" android:id="@+id/notesTextArea" android:background="@null" android:padding="16dp" android:layout_width="0dp" android:layout_height="0dp" android:hint="@string/logger_description" android:inputType="none|text|textCapWords|textCapSentences" android:imeOptions="actionDone" android:layout_marginStart="16dp" android:elevation="2dp" app:layout_constraintBottom_toBottomOf="@+id/photoPicker" app:layout_constraintEnd_toEndOf="0" app:layout_constraintStart_toEndOf="@+id/photoPicker" app:layout_constraintTop_toTopOf="@+id/photoPicker"/>
            </androidx.constraintlayout.widget.ConstraintLayout>
            <Button android:textColor="@color/gb_blue_color" android:id="@+id/logButton" android:background="@drawable/extra_rounded_blue_premium_btn" android:paddingLeft="20dp" android:paddingRight="20dp" android:layout_width="wrap_content" android:layout_height="40dp" android:layout_marginTop="32dp" android:layout_marginBottom="30dp" android:text="Log" android:backgroundTint="@color/white" app:layout_constraintBottom_toBottomOf="0" app:layout_constraintEnd_toEndOf="0" app:layout_constraintStart_toStartOf="0" app:layout_constraintTop_toBottomOf="@+id/whiteBg"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>
