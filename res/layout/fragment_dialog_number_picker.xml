<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:orientation="vertical" android:background="@color/circle_background" android:focusable="true" android:layout_width="wrap_content" android:layout_height="@dimen/picker_dimen">
    <LinearLayout android:layout_gravity="center" android:orientation="horizontal" android:id="@+id/container_number_pickers" android:layout_width="wrap_content" android:layout_height="0dp" android:layout_marginLeft="50dp" android:layout_marginTop="20dp" android:layout_marginRight="50dp" android:layout_marginBottom="20dp" android:layout_weight="1">
        <NumberPicker android:layout_gravity="center" android:id="@+id/number_picker_major" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
        <TextView android:textColor="@color/numbers_text_color" android:layout_gravity="center" android:id="@+id/text_view_fraction_sign" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
        <NumberPicker android:layout_gravity="center" android:id="@+id/number_picker_minor" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
        <TextView android:textColor="@color/numbers_text_color" android:layout_gravity="center" android:id="@+id/text_view_units" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
    </LinearLayout>
    <View android:background="@color/line_background" android:layout_width="match_parent" android:layout_height="1dp"/>
    <LinearLayout android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="wrap_content">
        <Button android:textSize="@dimen/done_label_size" android:textColor="@color/done_text_color" android:id="@+id/action_reset" android:layout_width="0dp" android:layout_height="wrap_content" android:minHeight="48dp" android:text="@string/action_unset" android:layout_weight="1" style="?android:attr/buttonBarButtonStyle"/>
        <Button android:textSize="@dimen/done_label_size" android:textColor="@color/done_text_color" android:id="@+id/action_done" android:layout_width="0dp" android:layout_height="wrap_content" android:minHeight="48dp" android:text="@string/action_done" android:layout_weight="1" style="?android:attr/buttonBarButtonStyle"/>
    </LinearLayout>
</LinearLayout>
