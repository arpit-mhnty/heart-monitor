<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:layout_width="match_parent" android:layout_height="wrap_content">
    <View android:id="@+id/line1" android:background="#abb6c1" android:layout_width="2dp" android:layout_height="15dp" android:layout_marginTop="2dp" android:layout_marginStart="72dp" app:layout_constraintLeft_toLeftOf="0" app:layout_constraintTop_toTopOf="0"/>
    <RelativeLayout android:id="@+id/exerciseContainer" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="2dp" android:layout_marginStart="28dp" android:layout_marginEnd="20dp" app:layout_constraintLeft_toLeftOf="0" app:layout_constraintTop_toBottomOf="@+id/line1">
        <ImageView android:id="@+id/exerciseImage" android:layout_width="90dp" android:layout_height="60dp" android:src="@drawable/fitness_buddy_logo" android:scaleType="centerCrop"/>
        <LinearLayout android:orientation="vertical" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_toRightOf="@+id/exerciseImage" android:layout_centerVertical="true">
            <com.azumio.android.argus.view.XMLTypefaceTextView android:textSize="17sp" android:textStyle="bold" android:textColor="#283154" android:id="@+id/exerciseName" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Exercise Name" android:layout_marginStart="10dp"/>
            <com.azumio.android.argus.view.XMLTypefaceTextView android:textSize="12sp" android:textStyle="normal" android:textColor="#6e818a" android:id="@+id/reps" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="10 Reps" android:layout_marginStart="10dp"/>
        </LinearLayout>
    </RelativeLayout>
    <View android:id="@+id/line2" android:background="#abb6c1" android:layout_width="2dp" android:layout_height="15dp" android:layout_marginTop="2dp" android:layout_marginStart="72dp" app:layout_constraintLeft_toLeftOf="0" app:layout_constraintTop_toBottomOf="@+id/exerciseContainer"/>
</androidx.constraintlayout.widget.ConstraintLayout>
