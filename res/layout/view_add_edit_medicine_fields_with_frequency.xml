<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt">
    <RelativeLayout android:background="@color/white" android:layout_width="match_parent" android:layout_height="60dp">
        <com.azumio.android.argus.view.XMLTypefaceTextView android:textSize="16sp" android:textColor="@color/black" android:gravity="center_vertical" android:layout_width="wrap_content" android:layout_height="match_parent" android:text="@string/medicine_name" android:layout_centerVertical="true" android:layout_marginStart="20dp" android:layout_alignParentStart="true" app:typeface="@string/font_path_roboto_medium"/>
        <EditText android:textSize="16sp" android:gravity="center_vertical" android:id="@+id/medicineName" android:background="@null" android:layout_width="wrap_content" android:layout_height="match_parent" android:text="" android:hint="@string/new_medicine" android:inputType="none|text|textCapWords|textCapSentences" android:layout_marginEnd="20dp" android:layout_alignParentEnd="true"/>
    </RelativeLayout>
    <include android:id="@+id/separater" layout="@layout/view_medicine_field_separator"/>
    <RelativeLayout android:orientation="vertical" android:background="@color/white" android:layout_width="match_parent" android:layout_height="60dp">
        <com.azumio.android.argus.view.XMLTypefaceTextView android:textSize="16sp" android:textColor="@color/black" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/is_this_insulin" android:layout_centerVertical="true" android:layout_marginStart="20dp" app:typeface="@string/font_path_roboto_medium"/>
        <androidx.appcompat.widget.SwitchCompat android:id="@+id/insulineSwitch" android:clipChildren="false" android:clipToPadding="false" android:layout_width="70dp" android:layout_height="30dp" android:checked="false" android:layout_centerVertical="true" android:layout_marginEnd="20dp" android:layout_alignParentEnd="true" app:layout_constraintBottom_toBottomOf="0" app:layout_constraintEnd_toEndOf="0" app:layout_constraintTop_toTopOf="0" app:showText="false"/>
    </RelativeLayout>
    <include android:id="@+id/insulinDivider" layout="@layout/view_medicine_field_separator"/>
    <RelativeLayout android:orientation="vertical" android:id="@+id/insulinView" android:background="@color/white" android:layout_width="match_parent" android:layout_height="wrap_content">
        <com.azumio.android.argus.view.XMLTypefaceTextView android:textSize="16sp" android:textColor="@color/black" android:id="@+id/insulinText" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="10dp" android:layout_marginBottom="5dp" android:text="@string/insulin_type" android:layout_marginStart="20dp" app:typeface="@string/font_path_roboto_medium"/>
        <com.google.android.material.chip.ChipGroup android:id="@+id/insulinChipGroup" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginBottom="10dp" android:layout_below="@+id/insulinText" android:layout_marginStart="16dp" android:layout_marginEnd="16dp" app:chipSpacing="8dp" app:singleLine="false" app:singleSelection="true"/>
    </RelativeLayout>
    <include layout="@layout/view_medicine_field_separator"/>
    <RelativeLayout android:orientation="vertical" android:background="@color/white" android:layout_width="match_parent" android:layout_height="wrap_content">
        <com.azumio.android.argus.view.XMLTypefaceTextView android:textSize="16sp" android:textColor="@color/black" android:id="@+id/medicineUnits" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="10dp" android:layout_marginBottom="5dp" android:text="@string/medicine_units" android:layout_marginStart="20dp" app:typeface="@string/font_path_roboto_medium"/>
        <com.google.android.material.chip.ChipGroup android:id="@+id/medicineUnitChipGroup" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginBottom="10dp" android:layout_below="@+id/medicineUnits" android:layout_marginStart="16dp" android:layout_marginEnd="16dp" app:chipSpacing="8dp" app:singleLine="false" app:singleSelection="true"/>
    </RelativeLayout>
    <include android:id="@+id/fixedMedicineSeparator" layout="@layout/view_medicine_field_separator"/>
    <androidx.constraintlayout.widget.ConstraintLayout android:orientation="vertical" android:id="@+id/fixedMedicineLayout" android:background="@color/white" android:padding="20dp" android:layout_width="match_parent" android:layout_height="wrap_content">
        <com.azumio.android.argus.view.XMLTypefaceTextView android:textSize="16sp" android:textColor="@color/black" android:id="@+id/fixedMedicineText" android:layout_width="0dp" android:layout_height="wrap_content" android:text="@string/do_you_take_the_same_amount_every_time_check_if_yes" app:layout_constraintBottom_toBottomOf="0" app:layout_constraintEnd_toStartOf="@+id/fixedDosageSwitch" app:layout_constraintStart_toStartOf="0" app:layout_constraintTop_toTopOf="0" app:typeface="@string/font_path_roboto_medium"/>
        <androidx.appcompat.widget.SwitchCompat android:id="@+id/fixedDosageSwitch" android:clipChildren="false" android:clipToPadding="false" android:layout_width="70dp" android:layout_height="30dp" android:checked="false" app:layout_constraintBottom_toBottomOf="0" app:layout_constraintEnd_toEndOf="0" app:layout_constraintStart_toEndOf="@+id/fixedMedicineText" app:layout_constraintTop_toTopOf="0" app:showText="false"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
    <include layout="@layout/view_medicine_field_separator"/>
    <RelativeLayout android:id="@+id/medicineDosageView" android:background="@color/white" android:visibility="gone" android:layout_width="match_parent" android:layout_height="60dp">
        <com.azumio.android.argus.view.XMLTypefaceTextView android:textSize="16sp" android:textColor="@color/black" android:gravity="center_vertical" android:layout_width="wrap_content" android:layout_height="match_parent" android:text="@string/medicine_dosage_title" android:layout_centerVertical="true" android:layout_marginStart="20dp" android:layout_alignParentStart="true" app:typeface="@string/font_path_roboto_medium"/>
        <EditText android:textSize="16sp" android:gravity="center_vertical" android:id="@+id/dosageAmountEditText" android:background="@null" android:layout_width="wrap_content" android:layout_height="match_parent" android:text="" android:hint="@string/medicine_dosage_amount" android:inputType="numberDecimal" android:layout_marginEnd="20dp" android:layout_alignParentEnd="true"/>
    </RelativeLayout>
    <include layout="@layout/view_medicine_frequency"/>
</merge>
