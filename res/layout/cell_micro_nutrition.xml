<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:orientation="vertical" android:layout_width="match_parent" android:layout_height="match_parent">
    <LinearLayout android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="10dp" android:layout_marginTop="20dp" android:layout_marginRight="10dp" android:layout_marginBottom="5dp" android:weightSum="5">
        <com.azumio.android.argus.view.XMLTypefaceTextView android:textSize="13sp" android:id="@+id/cell_text_label" android:layout_width="0dp" android:layout_height="wrap_content" android:text="Total Fat" android:layout_weight="2" app:typeface="@string/font_path_roboto_medium"/>
        <com.azumio.android.argus.view.XMLTypefaceTextView android:textSize="12sp" android:gravity="right" android:id="@+id/cell_text_value" android:layout_width="0dp" android:layout_height="wrap_content" android:text="0" android:layout_weight="1" app:typeface="@string/font_path_roboto_regular"/>
        <com.azumio.android.argus.view.XMLTypefaceTextView android:textSize="12sp" android:gravity="right" android:id="@+id/goalValue" android:layout_width="0dp" android:layout_height="wrap_content" android:text="0" android:layout_weight="1" app:typeface="@string/font_path_roboto_regular"/>
        <com.azumio.android.argus.view.XMLTypefaceTextView android:textSize="12sp" android:gravity="right" android:id="@+id/leftValue" android:layout_width="0dp" android:layout_height="wrap_content" android:text="0g" android:layout_weight="1" app:typeface="@string/font_path_roboto_regular"/>
    </LinearLayout>
    <ProgressBar android:id="@+id/progressbar" android:layout_width="match_parent" android:layout_height="7dp" android:layout_marginLeft="10dp" android:layout_marginRight="10dp" android:max="100" style="@style/CustomProgressBar"/>
</LinearLayout>
