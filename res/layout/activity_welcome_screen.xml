<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:orientation="vertical" android:background="@drawable/argus_onboarding_bg_stretch" android:layout_width="match_parent" android:layout_height="match_parent">
    <com.azumio.android.argus.view.FillingView android:id="@+id/main_menu_toolbars" android:visibility="visible" android:layout_width="match_parent" android:layout_height="?attr/actionBarSize" android:minHeight="?attr/actionBarSize" android:elevation="@dimen/action_bar_elevation">
        <RelativeLayout android:layout_width="match_parent" android:layout_height="match_parent">
            <com.azumio.android.argus.view.CenteredCustomFontView android:textSize="30sp" android:textColor="@color/white" android:id="@+id/cross" android:visibility="visible" android:layout_width="25dp" android:layout_height="30dp" android:layout_marginTop="15dp" android:layout_alignParentLeft="true" android:layout_alignParentTop="true"/>
            <com.azumio.android.argus.view.CenteredCustomFontView android:textSize="80dp" android:textColor="@color/white" android:id="@+id/argus_logo" android:layout_width="100dp" android:layout_height="50dp" android:layout_marginLeft="15dp" android:layout_marginTop="10dp" android:layout_alignParentTop="true" android:layout_centerInParent="true"/>
        </RelativeLayout>
    </com.azumio.android.argus.view.FillingView>
    <RelativeLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_centerInParent="true" android:layout_centerVertical="true">
        <com.azumio.android.argus.view.XMLTypefaceTextView android:textSize="26dp" android:textColor="@color/white" android:gravity="center" android:id="@+id/welcomeText" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="15dp" android:layout_marginTop="50dp" android:layout_marginBottom="15dp" android:text="Welcome to Argus!" android:layout_alignParentTop="true" app:typeface="@string/font_path_sans_francisco_medium"/>
        <com.azumio.android.argus.view.XMLTypefaceTextView android:textSize="18dp" android:textColor="@color/white" android:gravity="center" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="25dp" android:layout_marginRight="25dp" android:layout_marginBottom="50dp" android:text="Lets start a healthier lifestyle by first getting to know a little bit about you and your goals." android:layout_below="@+id/welcomeText" app:typeface="@string/font_path_sans_francisco_regular"/>
    </RelativeLayout>
    <LinearLayout android:orientation="vertical" android:id="@+id/bottomlayout" android:background="@drawable/rounded_rectangle_ripple" android:layout_width="match_parent" android:layout_height="42dp" android:layout_marginLeft="25dp" android:layout_marginTop="20dp" android:layout_marginRight="25dp" android:layout_marginBottom="25dp" android:layout_alignParentBottom="true" android:backgroundTint="@color/white">
        <com.azumio.android.argus.view.XMLTypefaceTextView android:textSize="16.32sp" android:textColor="@color/blue_color" android:gravity="center" android:id="@+id/getstartedbtn" android:layout_width="match_parent" android:layout_height="42dp" android:text="Set My Goals" android:layout_centerHorizontal="true" android:textAllCaps="true" app:typeface="@string/font_path_sans_francisco_medium"/>
    </LinearLayout>
