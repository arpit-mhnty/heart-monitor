<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:layout_width="match_parent" android:layout_height="match_parent">
    <TextView android:gravity="center" android:id="@+id/listview_friends_header_top" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="20dp" android:text="@string/newsfeed_welcome_message"/>
    <TextView android:gravity="center" android:id="@+id/listview_friends_header_bottom" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="Add some and build an interesting newsfeed." android:layout_below="@+id/listview_friends_header_top" android:layout_alignParentLeft="true" android:layout_alignParentStart="true"/>
    <LinearLayout android:orientation="horizontal" android:id="@+id/listview_friends_header_container_outer" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="20dp" android:layout_marginTop="10dp" android:layout_marginRight="20dp" android:layout_below="@+id/listview_friends_header_bottom">
        <LinearLayout android:id="@+id/listview_friends_header_container" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_weight="1">
            <com.azumio.android.argus.view.KeepRatioImageView android:layout_width="50dp" android:layout_height="50dp" android:layout_marginRight="10dp" android:src="@drawable/dashed_box" android:adjustViewBounds="true" android:layout_weight="1" app:corner_radius="3dp" app:ratio="1"/>
            <com.azumio.android.argus.view.KeepRatioImageView android:layout_width="50dp" android:layout_height="50dp" android:layout_marginRight="10dp" android:src="@drawable/dashed_box" android:adjustViewBounds="true" android:layout_weight="1" app:corner_radius="3dp" app:ratio="1"/>
            <com.azumio.android.argus.view.KeepRatioImageView android:layout_width="50dp" android:layout_height="50dp" android:layout_marginRight="10dp" android:src="@drawable/dashed_box" android:adjustViewBounds="true" android:layout_weight="1" app:corner_radius="3dp" app:ratio="1"/>
            <com.azumio.android.argus.view.KeepRatioImageView android:layout_width="50dp" android:layout_height="50dp" android:layout_marginRight="10dp" android:src="@drawable/dashed_box" android:layout_weight="1" app:corner_radius="3dp" app:ratio="1"/>
            <com.azumio.android.argus.view.KeepRatioImageView android:layout_width="50dp" android:layout_height="50dp" android:layout_marginRight="10dp" android:src="@drawable/dashed_box" android:layout_weight="1" app:corner_radius="3dp" app:ratio="1"/>
            <com.azumio.android.argus.view.KeepRatioImageView android:layout_width="50dp" android:layout_height="50dp" android:layout_marginRight="10dp" android:src="@drawable/dashed_box" android:layout_weight="1" app:corner_radius="3dp" app:ratio="1"/>
            <com.azumio.android.argus.view.KeepRatioImageView android:layout_width="50dp" android:layout_height="50dp" android:layout_marginRight="10dp" android:src="@drawable/dashed_box" android:layout_weight="1" app:corner_radius="3dp" app:ratio="1"/>
        </LinearLayout>
        <TextView android:gravity="center" android:id="@+id/listview_friends_header_textview" android:layout_width="wrap_content" android:layout_height="match_parent" android:text="0/7"/>
    </LinearLayout>
    <Space android:layout_width="match_parent" android:layout_height="15dp" android:layout_below="@+id/listview_friends_header_container_outer"/>
</RelativeLayout>
