<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:orientation="vertical" android:layout_width="match_parent" android:layout_height="100dp">
    <RelativeLayout android:id="@+id/ad_view_banner_container" android:background="@drawable/rounded_fb_white" android:layout_width="320dp" android:layout_height="80dp" android:layout_marginTop="20dp" android:layout_marginBottom="8dp" android:layout_centerHorizontal="true">
        <ImageView android:id="@+id/ad_imageView" android:background="@drawable/ads_rounded_corner" android:layout_width="match_parent" android:layout_height="match_parent" android:layout_alignParentLeft="true" android:layout_alignParentTop="true"/>
        <TextView android:textSize="13sp" android:textStyle="bold" android:textColor="@color/black" android:gravity="top" android:id="@+id/ad_title" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="10dp" android:layout_marginTop="5dp" android:text="Medium Text" android:layout_alignParentTop="true"/>
        <TextView android:textSize="11sp" android:textColor="#535252" android:id="@+id/ad_text" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="10dp" android:layout_marginTop="2dp" android:text="Small Text" android:layout_below="@+id/ad_title"/>
        <TextView android:textSize="10sp" android:textColor="@color/white" android:id="@+id/housead_calltoaction" android:paddingLeft="5dp" android:paddingTop="2dp" android:paddingRight="5dp" android:paddingBottom="2dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="10dp" android:layout_marginBottom="5dp" android:text="Small Text2" android:layout_toRightOf="@+id/ad_imageView" android:layout_above="@+id/btnView"/>
        <RelativeLayout android:gravity="center" android:id="@+id/btnView" android:background="@drawable/extra_rounded_premium_btn" android:layout_width="150dp" android:layout_height="20dp" android:layout_marginLeft="5dp" android:layout_marginTop="3dp" android:layout_marginBottom="5dp" android:layout_alignParentBottom="true">
            <TextView android:textSize="10sp" android:gravity="center" android:id="@+id/btntext" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="UNLOCK STRESS TEST"/>
        </RelativeLayout>
    </RelativeLayout>
    <com.azumio.android.argus.view.CenteredCustomFontView android:textSize="20sp" android:textColor="@color/white" android:id="@+id/ad_view_banner_close" android:background="@drawable/circle_shape" android:layout_width="25dp" android:layout_height="25dp" android:layout_marginLeft="-17dp" android:layout_marginTop="3dp" android:layout_toRightOf="@+id/ad_view_banner_container" android:layout_alignParentTop="true" android:backgroundTint="@color/light_red"/>
</RelativeLayout>
