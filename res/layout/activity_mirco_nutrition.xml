<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:orientation="vertical" android:layout_width="match_parent" android:layout_height="match_parent">
    <com.azumio.android.argus.view.FillingView android:id="@+id/main_menu_toolbars" android:background="?attr/colorPrimary" android:visibility="visible" android:layout_width="match_parent" android:layout_height="?attr/actionBarSize" android:minHeight="?attr/actionBarSize" android:layout_alignParentTop="true">
        <RelativeLayout android:layout_width="match_parent" android:layout_height="match_parent">
            <com.azumio.android.argus.view.CenteredCustomFontView android:textSize="30dp" android:textColor="@android:color/white" android:id="@+id/activity_with_fragment_arrow" android:layout_width="30dp" android:layout_height="match_parent" android:layout_marginRight="15dp" app:fontPath="@string/font_path_material_design_set"/>
            <com.azumio.android.argus.view.XMLTypefaceTextView android:textSize="20dp" android:textColor="@android:color/white" android:ellipsize="end" android:id="@+id/activity_with_fragment_toolbar_textview" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="10dp" android:text="@string/nutrition" android:singleLine="true" android:layout_toRightOf="@+id/activity_with_fragment_arrow" android:layout_centerVertical="true" app:typeface="@string/font_path_roboto_regular"/>
        </RelativeLayout>
    </com.azumio.android.argus.view.FillingView>
    <RelativeLayout android:id="@+id/toplayout" android:background="@color/calories_color" android:layout_width="match_parent" android:layout_height="70dp">
        <com.azumio.android.argus.view.CenteredCustomFontView android:textSize="30dp" android:id="@+id/left_button" android:layout_width="30dp" android:layout_height="30dp" android:layout_marginLeft="40dp" android:layout_alignParentLeft="true" android:layout_centerVertical="true"/>
        <com.azumio.android.argus.view.XMLTypefaceTextView android:textSize="14sp" android:textStyle="normal" android:textColor="@color/white" android:id="@+id/txt_date" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_centerHorizontal="true" android:layout_centerVertical="true" app:typeface="@string/font_path_roboto_medium"/>
        <com.azumio.android.argus.view.CenteredCustomFontView android:textSize="30dp" android:id="@+id/right_button" android:layout_width="30dp" android:layout_height="30dp" android:layout_marginRight="40dp" android:layout_alignParentRight="true" android:layout_centerVertical="true"/>
    </RelativeLayout>
    <LinearLayout android:orientation="horizontal" android:background="@color/background_color" android:paddingLeft="20dp" android:paddingTop="20dp" android:paddingRight="20dp" android:paddingBottom="10dp" android:layout_width="match_parent" android:layout_height="55dp" android:weightSum="5">
        <com.azumio.android.argus.view.XMLTypefaceTextView android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="2"/>
        <com.azumio.android.argus.view.XMLTypefaceTextView android:gravity="right" android:id="@+id/totalValue" android:layout_width="0dp" android:layout_height="wrap_content" android:text="@string/total" android:layout_weight="1"/>
        <com.azumio.android.argus.view.XMLTypefaceTextView android:gravity="right" android:id="@+id/goalValue" android:layout_width="0dp" android:layout_height="wrap_content" android:text="@string/goal" android:layout_weight="1"/>
        <com.azumio.android.argus.view.XMLTypefaceTextView android:gravity="right" android:id="@+id/leftValue" android:layout_width="0dp" android:layout_height="wrap_content" android:text="@string/left" android:layout_weight="1"/>
    </LinearLayout>
    <ExpandableListView android:id="@+id/nutrition_list_view" android:background="@color/white" android:paddingBottom="20dp" android:clickable="true" android:layout_width="match_parent" android:layout_height="wrap_content" android:scrollingCache="false" android:groupIndicator="@null" android:childDivider="@android:color/transparent" android:divider="@null" android:dividerHeight="0dp" android:choiceMode="singleChoice" android:layout_below="@+id/main_menu_toolbars"/>
</LinearLayout>
