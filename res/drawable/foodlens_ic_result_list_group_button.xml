<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt">
    <item android:state_selected="true">
        <shape android:shape="rectangle">
            <corners android:radius="16dp"/>
            <gradient android:startColor="@color/foodlens_result_list_header_item_gradient_start_color" android:endColor="@color/foodlens_result_list_header_item_gradient_end_color" android:angle="0" android:type="linear"/>
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="16dp"/>
            <stroke android:width="1dp" android:color="@color/foodlens_result_list_header_item_text_color"/>
        </shape>
    </item>
</selector>
